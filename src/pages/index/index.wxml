<!--index.wxml-->
<!--  搜索框  -->
<view class='search base-padding base-margin-bottom'>
  <label>
    <icon type='search'></icon>
    <input type='search' placeholder="请输入搜索关键字" />
  </label>
</view>

<!--  banner  -->
<view wx:if="{{banners.length>0}}" class='swiper base-padding base-margin-bottom'>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{banners}}" wx:key="index" wx:for-item='item'>
      <swiper-item>
        <navigator url='{{item.link}}'>
          <image bindtab='letsgo' src="{{item.image}}" mode='center' class="slide-image" />
        </navigator>
      </swiper-item>
    </block>
  </swiper>
</view>


<!--  推荐  -->
<view wx:if="{{recommendBooks.length>0}}" class='panel base-padding recommend base-margin-bottom'>
  <view class='panel-heading'>
    <view class='panel-title font-lv1 strong'>最新推荐</view>
  </view>
  <view class='panel-body'>
    <scroll-view scroll-x>
      <view class='hor'>
        <block wx:for="{{recommendBooks}}" wx:key='index' wx:for-item="book">
          <navigator url="/pages/intro/intro?id={{book.book_id}}">
            <image mode='widthFix' class='box-shadow cover' src='{{book.cover}}' />
            <view class='font-lv3 ellipsis-2row mgt-15rpx'>{{book.book_name}}</view>
          </navigator>
        </block>
      </view>
    </scroll-view>
  </view>
</view>

<!--  各种分类的书籍的展示  -->
<block wx:for="{{categoryBooks}}" wx:for-item="category" wx:key="index">
  <view wx:if="{{category.books.length>0}}" class='panel base-padding base-margin-bottom cate-data'>
    <view class='panel-heading'>
      <view class='panel-title font-lv1 strong'>{{category.title}}
        <navigator url='/pages/list/list?cid={{category.id}}' class='pull-right color-link font-lv3'>更多</navigator>
      </view>
    </view>
    <view class='panel-body'>
      <block wx:for="{{category.books}}" wx:key="index1" wx:for-item="book">
        <view class='row'>
          <view class='row-left'>
            <navigator url="/pages/intro/intro?id={{book.book_id}}">
              <image mode='widthFix' class='box-shadow' src='{{book.cover}}' />
            </navigator>
          </view>
          <navigator url='/pages/intro/intro?id={{book.book_id}}' class='row-right'>
            <view class='ellipsis-1row font-lv2'>{{book.book_name}}</view>
            <view class='text-muted info'>
              <view>
                <image src='../../assets/images/eye.png'></image>{{book.view}} 阅读</view>
              <view>
                <image src='../../assets/images/document.png'></image>{{book.cnt_doc}} 章节</view>
              <view>
                <image src='../../assets/images/clock.png'></image> {{book.created_at}}</view>
            </view>
            <view class='text-muted ellipsis-2row desc'>{{book.description}}</view>
          </navigator>
        </view>
      </block>
    </view>
  </view>
</block>