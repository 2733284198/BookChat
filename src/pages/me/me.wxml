<view class='base-padding row' bindtap='userEvent'>
  <view class='user'>
    <image src='{{user.avatar}}'></image>
    <view class='username'>{{user.nickname}}</view>
    <view class='color-grey font-lv3'>{{user.intro}}</view>
  </view>
</view>

<view class='base-padding row base-info'>
  <navigator url="{{user.uid>0? '/pages/release/release?tab=release':'/pages/login/login'}}" class='col-12'>
    <image src='../../assets/images/book.png'></image>
    我的发布
    <image class='pull-right' src='../../assets/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/release/release?tab=star":"/pages/login/login"}}' class='col-12'>
    <image src='../../assets/images/star.png'></image>
    我的收藏
    <image class='pull-right' src='../../assets/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/release/release?tab=fans":"/pages/login/login"}}' class='col-12'>
    <image src='../../assets/images/fans.png'></image>
    我的粉丝
    <image class='pull-right' src='../../assets/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/release/release?tab=follow":"/pages/login/login"}}' class='col-12'>
    <image src='../../assets/images/follow.png'></image>
    我的关注
    <image class='pull-right' src='../../assets/images/right-angle.png'></image>
  </navigator>
  <view wx:if="{{user.uid>0}}" bindtap='logout' class='col-12'>
    <image src='../../assets/images/login.png'></image>
    退出登录
    <image class='pull-right' src='../../assets/images/right-angle.png'></image>
  </view>
</view>

