@import 'markdown.wxss';
page{height: 100%;}
.title {
  line-height: 1.6;
  border-bottom: 1px solid #efefef;
  padding: 0 0 30rpx;
  margin-bottom: 30rpx;
}

.markdown-body {
  transition: all 0.5s;
  padding: 30rpx 30rpx 120rpx;
  box-sizing: border-box;
}

/* footer */

.footer {
  box-shadow: 0rpx 0rpx 10rpx #efefef;
  border-top: 1px solid #efefef;
  position: fixed;
  height: 90rpx;
  bottom: 0px;
  width: 100%;
  text-align: center;
  z-index: 100;
  box-sizing: border-box;
  line-height: 90rpx;
}

.footer image {
  margin-top: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 抽屉 */

.drawer {
  width: 80%;
  position: fixed;
  z-index: 99;
  height: 100%;
  overflow-y: scroll;
  top: 0;
  transition: all 0.5s;
  -webkit-overflow-scrolling: touch;
}

.drawer .drawer-content {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

.drawer-left {
  right: 100%;
}

.drawer-right {
  left: 100%;
}

.drawer-left.show {
  right: 20%;
  border-right: 1px solid #efefef;
}

.drawer-right.show {
  left: 20%;
  border-left: 1px solid #efefef;
}

menu .footer {
  display: none;
}

.more-setting {
  position: absolute;
  width: 100%;
  bottom: 120rpx;
}

.setting-tips {
  padding: 15rpx 15rpx;
}

.setting-item {
  text-align: center;
  font-size: 32rpx;
  line-height: 32rpx;
  border: 1rpx solid #efefef;
  border-left: 0;
  border-right: 0;
  margin-bottom: 45rpx;
}

.more-setting .col {
  padding: 30rpx 0;
}

.setting-btn {
  margin-bottom: 0;
}

.setting-btn navigator {
  border-left: 1rpx solid #efefef;
}

.more-setting .col:nth-of-type(2) {
  border-right: 1rpx solid #efefef;
  border-left: 1rpx solid #efefef;
}

.more-setting image {
  width: 32rpx;
  height: 32rpx;
}

slider {
  width: 100%;
}

.bg-theme0 {
  background-color: #fff !important;
}

.bg-theme1 {
  background-color: rgb(232, 232, 232) !important;
}

.bg-theme2 {
  background-color: rgb(223, 214, 198) !important;
}

.bg-theme3 {
  background-color: rgb(208, 189, 138) !important;
}

.bg-theme4 {
  background-color: rgb(165, 205, 205) !important;
}
