@import '../../app.wxss';

page{padding-bottom: 120rpx;}

.book {
  border-bottom: 1px solid #efefef;
  padding-bottom: 30rpx;
}

.book navigator image {
  width: 170rpx;height: 223.5rpx;
}

.book-title {
  white-space: nowrap;
  padding-top: 7rpx;
}

.book-info {
  box-sizing: border-box;
  padding-left: 30rpx;
}


/* footer */

.footer {
  box-shadow: 0rpx 0rpx 10rpx #efefef;
  border-top: 1px solid #efefef;
  background-color: #fff;
  position: fixed;
  height: 90rpx;
  bottom: 0px;
  width: 100%;
  text-align: center;
  line-height: 90rpx;
}

.footer .active {
  color: #008cff;
}
